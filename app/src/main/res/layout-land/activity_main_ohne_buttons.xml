<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="herdenmanagement.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <herdenmanagement.view.AckerView
        android:id="@+id/acker_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fressen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/fressen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/rauchen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kuh_gras" />

    <ImageButton
        android:id="@+id/rauchen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/spawn"
        app:layout_constraintStart_toStartOf="@+id/fressen"
        app:layout_constraintTop_toBottomOf="@+id/fressen"
        app:srcCompat="@drawable/kuh_rauch" />

    <ImageButton
        android:id="@+id/melken"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spawn"
        app:layout_constraintTop_toBottomOf="@+id/spawn"
        app:srcCompat="@drawable/eimer" />

    <ImageButton
        android:id="@+id/spawn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/melken"
        app:layout_constraintStart_toStartOf="@+id/rauchen"
        app:layout_constraintTop_toBottomOf="@+id/rauchen"
        app:srcCompat="@drawable/kuh" />

</androidx.constraintlayout.widget.ConstraintLayout>

