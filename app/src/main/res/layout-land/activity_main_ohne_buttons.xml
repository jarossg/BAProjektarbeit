<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="herdenmanagement.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <herdenmanagement.view.AckerView
        android:id="@+id/acker_view"
        android:layout_width="587dp"
        android:layout_height="354dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fressen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acker_view"
        app:layout_constraintTop_toTopOf="@+id/acker_view"
        app:srcCompat="@drawable/kuh_gras" />

    <ImageButton
        android:id="@+id/rauchen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintStart_toStartOf="@+id/fressen"
        app:layout_constraintTop_toBottomOf="@+id/fressen"
        app:srcCompat="@drawable/kuh_rauch" />

    <ImageButton
        android:id="@+id/melken"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintBottom_toBottomOf="@+id/acker_view"
        app:layout_constraintStart_toStartOf="@+id/spawn"
        app:layout_constraintTop_toBottomOf="@+id/spawn"
        app:srcCompat="@drawable/eimer" />

    <ImageButton
        android:id="@+id/spawn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintStart_toStartOf="@+id/rauchen"
        app:layout_constraintTop_toBottomOf="@+id/rauchen"
        app:srcCompat="@drawable/kuh" />

</androidx.constraintlayout.widget.ConstraintLayout>
